<div class="w-full px-4">
  <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
    <div class="px-4 py-5 flex-auto">
      <%= link_to resource.title, resource.url, class: "text-xl font-semibold" %>
      <p class="mt-2 text-gray-600"><%= resource.user.name %></p>
      <div data-controller='toggle' class="mt-2">
        <button data-action='click->toggle#toggle touch->toggle#toggle' class="text-gray-900">
          Description
          <i class="fa fa-arrow-down" aria-hidden="true"></i>
        </button>
        <div data-target='toggle.toggleable' class="m-4 hidden">
          <p><%= resource.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
